<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.CreepHyp.music_lyrics">
    <!-- Android 12 or below  -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <!-- Android 13 or greater  -->
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO"/>

    <uses-permission android:name="android.permission.WAKE_LOCK"/> <!--追加-->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/> <!--追加-->
    <uses-permission android:name="android.permission.INTERNET"/> <!--追加-->

    <!--追加-->
    <queries>
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="https" />
        </intent>
    </queries>

   <application
        android:label="あなたの歌詞が"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher"
        android:requestLegacyExternalStorage="true">    <!--追加-->
        <activity
           android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">
           <intent-filter>
               <action android:name="android.intent.action.MAIN"/>
               <category android:name="android.intent.category.LAUNCHER"/>
           </intent-filter>
       </activity>

       <meta-data
           android:name="flutterEmbedding"
           android:value="2" />

        <!--追加-->
       <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-2338849205545790~8552896608"/>
   </application>
</manifest>